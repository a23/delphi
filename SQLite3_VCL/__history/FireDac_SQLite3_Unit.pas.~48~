  //end;  //----------------------------------------------------------------------------
  //-- シーケンス管理用テーブル作成
  //----------------------------------------------------------------------------
  FDConnection1.StartTransaction;
  try
    try
      SQLstmt:= 'DROP TABLE IF EXISTS TEST_NO_1' ;
      FDQuery1.SQL.Clear;
      FDQuery1.SQL.Text :=SQLstmt;
      FDQuery1.ExecSQL;
    finally
      FDQuery1.Close;
    end;
    //---
    try
      SQLstmt:='create table TEST_NO_1 (seq_id INTEGER PRIMARY KEY AUTOINCREMENT, di integer)';
      FDQuery1.SQL.Clear;
      FDQuery1.SQL.Text :=SQLstmt;
      //FDQuery1.ParamByName('i1').AsInteger:=1;
      FDQuery1.ExecSQL;
    finally
      FDQuery1.Close;
    end;
    //-----------------------------------------------END

    //----------------------------------------------------------------------------
    try
      SQLstmt:= 'DROP TABLE IF EXISTS TEST_NO_2' ;
      FDQuery1.SQL.Clear;
      FDQuery1.SQL.Text :=SQLstmt;
      FDQuery1.ExecSQL;
    finally
      FDQuery1.Close;
    end;
    //---
    try
      SQLstmt:='create table TEST_NO_2 (seq_id INTEGER PRIMARY KEY AUTOINCREMENT, di integer)';
      FDQuery1.SQL.Clear;
      FDQuery1.SQL.Text :=SQLstmt;
      //FDQuery1.ParamByName('i1').AsInteger:=1;
      FDQuery1.ExecSQL;
    finally
      FDQuery1.Close;
    end;
    //-----------------------------------------------END

    FDConnection1.Commit;
    ShowMessage('こみっと　しました！');
  except
    FDConnection1.Rollback;
    ShowMessage('えらーロールバックしました。');
  end;




end;

procedure TForm1.SpeedButton7Click(Sender: TObject);
var
	SQLstmt,s:string;
begin
  //----------------------------------------------------------------------------
  //-- シーケンス NextVal
  //----------------------------------------------------------------------------
  FDConnection1.StartTransaction;
  try
    //----------------------------------------------------------------------------
    try
      SQLstmt:= 'insert into TEST_NO_1 (di) values (1)' ;
      FDQuery1.SQL.Clear;
      FDQuery1.SQL.Text :=SQLstmt;
      FDQuery1.ExecSQL;
    finally
      FDQuery1.Close;
    end;
    //---
    try
      SQLstmt:='select seq_id from TEST_NO_1 order by seq_id desc';
      FDQuery1.SQL.Clear;
      FDQuery1.SQL.Text :=SQLstmt;
      //FDQuery1.ParamByName('i1').AsInteger:=1;
      FDQuery1.Open;
      if FDQuery1.Eof then  Edit_NextVal.Text:='0'
      else
        Edit_NextVal.Text:=IntToStr(FDQuery1.FieldByName('seq_id').AsInteger);
    finally
      FDQuery1.Close;
    end;
    //-----------------------------------------------END

    FDConnection1.Commit;
    //ShowMessage('こみっと　しました！');
  except
    FDConnection1.Rollback;
    ShowMessage('えらーロールバックしました。');
  end;



end;

