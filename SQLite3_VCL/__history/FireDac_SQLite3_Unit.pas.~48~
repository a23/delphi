procedure TForm1.SpeedButton4Click(Sender: TObject);
var
  Param: TParams;
	SQLstmt,s:string;
begin
Label_RDB.Caption:='TEST_TBL';
  s:='''';
  //--------------------------------------テーブルの有無
  with FDConnection1 do
  try
    SQLstmt :='select tbl_name from sqlite_master where type='
              +s+'table'+s+' and name=:TABLEnm';
      FDQuery1.SQL.Clear;
      FDQuery1.SQL.Text:= sqlstmt;
      FDQuery1.ParamByName('TABLEnm').AsString:=Label_RDB.Caption;
      FDQuery1.Open();
      if FDQuery1.Eof then
      begin
        Label_RDB_CHK.Caption :='NONDB';
        SpeedButton4.Caption  :='NonDB';
      end
      else
      begin
        Label_RDB_CHK.Caption :=Trim(FDQuery1.FieldByName('tbl_name').AsString);
        SpeedButton4.Caption  :=Trim(FDQuery1.FieldByName('tbl_name').AsString);
      end;
  finally
      FDQuery1.Close;
      //FDQuery1.Free
  end;
  //--------------------------------------テーブルの有無

end;

